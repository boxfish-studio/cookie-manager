{
	"extends": "@repo/typescript-config/react.json",
	"compilerOptions": {
		"baseUrl": "./",
		"allowImportingTsExtensions": true,
		"paths": {
			"@lib": ["src/lib"],
			"@lib/*": ["src/lib/*"],
			"@app": ["src/lib/app"],
			"@app/*": ["src/lib/app/*"],
			"@components": ["src/lib/components"],
			"@components/*": ["src/lib/components/*"],
			"@core": ["../core"],
			"@core/*": ["../core/*"]
		}
	},
	"include": ["src", "*.config.js", "*.config.ts"],
	"exclude": ["node_modules"]
}
